<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProjectPractika.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ProjectPractika.Email"
        x:DataType="vm:MainWindowViewModel"
        Title="EmailWindow"
        Icon="/Assets/Logo.ico"
        Width="300"
        Height="350"
        MinWidth="250"
        MinHeight="350">
     
      <StackPanel Margin="20" Spacing="10">
                <TextBlock Text="Send to: " FontSize="25" FontWeight="Bold"/>
                <TextBox x:Name="EmailBox" Text="{Binding Email}" FontSize="20" />
                <TextBox x:Name="Theme" Text="{Binding Theme}" Watermark="Введите заголовок письма" FontSize="17" FontWeight="Bold" />                
                <TextBox x:Name="MainText" Text="{Binding Maintext}" Watermark="Введите текст..." FontSize="17" TextWrapping="Wrap"/>
                <Button Content="Отправить" Command="{Binding SendEmailCommand}" FontSize="17" />
      </StackPanel>           

</Window>
