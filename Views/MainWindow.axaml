<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProjectPractika.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectPractika.Views.MainWindow"
        Icon="/Assets/Logo.ico"
        x:DataType="vm:MainWindowViewModel"
        Title="ProjectPractika"
        Background="#DBDBDA"
        MinWidth="930"
        MinHeight="700">
    
    <Window.Styles>
        <Style Selector="Button.nav /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="Button:pointerover.nav /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style Selector="Button:pressed.nav /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="30" />
        </Style>

        <Style Selector="Button.data /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="Button:pointerover.data /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#000000" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>
        <Style Selector="Button:pressed.data /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />  
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Border Background="Black" CornerRadius="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />

                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Employee Database"
                               FontWeight="Bold"
                               FontSize="25"
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <Button Classes="nav" Grid.Column="1" Content="Send Email" Click="EmailWindow" Background="White" Margin="0,0,10,0"/>
                    <Button Classes="nav" Grid.Column="2" Content="{Binding HRButton}" Click="HRButton" Background="White" Command="{Binding HrCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="3" Content="{Binding DevButton}"  Click="DevelopButton" Background="White" Command="{Binding DevelopCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="4" Content="{Binding DesignButton}"  Click="DesignButton" Background="White" Command="{Binding DesignCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="5" Content="All" Click="AllButton" Background="White" Command="{Binding AllEmployeesCommand}" Margin="0,0,10,0"/>

                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="*" />    
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="10"
                        Margin="0,-10,10,0"
                        Padding="0,20,0,20">
                    <TextBlock x:Name="DepName"
                               Text="Все сотрудники"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <Border Grid.Column="1"
                        Margin="0,-10,0,0"
                        Background="White"
                        CornerRadius="10"
                        Padding="10">
                    <StackPanel Spacing="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Classes="data" Grid.Column="0" Command="{Binding ClearCommand}" Content="{Binding SaveBtn}" Background="Black" Click="NewEmployee" Margin="5" FontSize="33" />
                            <Button Classes="data" Grid.Column="1" Content="Изменить" Background="Black" Click="EditEmployee" Margin="5" FontSize="33" />

                        </Grid>
                        <Button Classes="data" Content="Удалить сотрудника" Background="Black" Command="{Binding DeleteEmployeeCommand}" Margin="5" FontSize="35"/>
                    </StackPanel>
                </Border>
            </Grid>
                
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10"
                    Margin="0,10,0,0"
                    Padding="10">

                <DataGrid   IsReadOnly="True"
                            CanUserReorderColumns="True"
                            CanUserResizeColumns="True"
                            GridLinesVisibility="All"
                            BorderThickness="4" BorderBrush="Black"
                            CornerRadius="4"
                            ItemsSource="{Binding Employees}"
                            SelectedItem="{Binding SelectedEmployee}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" />
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" />
                        <DataGridTextColumn Header="Отдел" Binding="{Binding Department}" />
                        <DataGridTextColumn Header="Зарплата" Binding="{Binding Salary}" />
                        <DataGridTextColumn Header="Дата рождения" Binding="{Binding DateOfBirth}" />
                        <DataGridTextColumn Header="Дата трудоустройства" Binding="{Binding DateOfEmployment}" />
                        <DataGridTextColumn Header="Электронная почта" Binding="{Binding Email}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>