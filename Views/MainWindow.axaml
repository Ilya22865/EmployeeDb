<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ProjectPractika.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ProjectPractika.Views.MainWindow"
        Icon="/Assets/Logo.ico"
        x:DataType="vm:MainWindowViewModel"
        Title="ProjectPractika"
        Background="#DBDBDA">
    
    <Window.Styles>
        <!-- Стили для кнопок навигации -->
        <Style Selector="Button.nav /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="Button:pointerover.nav /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="30" />
        </Style>
        <Style Selector="Button:pressed.nav /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="FontSize" Value="30" />
        </Style>

        <!-- Стили для кнопок действий -->
        <Style Selector="Button.data /template/ ContentPresenter">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style Selector="Button:pointerover.data /template/ ContentPresenter">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#000000" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>
        <Style Selector="Button:pressed.data /template/ ContentPresenter">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="BorderBrush" Value="#FFFFFF" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Шапка -->
            <RowDefinition Height="*" />    <!-- Основное содержимое -->
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Grid Grid.Row="0" Margin="10">
            <Border Background="Black" CornerRadius="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />

                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Employee Database"
                               FontWeight="Bold"
                               FontSize="25"
                               Foreground="White"
                               VerticalAlignment="Center" />

                    <Button Classes="nav" Grid.Column="1" Content="{Binding HRButton}" Click="HRButton" Background="White" Command="{Binding HrCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="2" Content="{Binding DevButton}"  Click="DevelopButton" Background="White" Command="{Binding DevelopCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="3" Content="{Binding DesignButton}"  Click="DesignButton" Background="White" Command="{Binding DesignCommand}" Margin="0,0,10,0" />
                    <Button Classes="nav" Grid.Column="4" Content="All" Click="AllButton" Background="White" Command="{Binding AllEmployeesCommand}" Margin="0,0,10,0"/>

                </Grid>
            </Border>
        </Grid>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Блок с "Отдел HR" и кнопками -->
                <RowDefinition Height="*" />    <!-- Место под DataGrid -->
            </Grid.RowDefinitions>

            <!-- Блок с "Отдел HR" и кнопками -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Левая панель: "Отдел HR" -->
                <Border Grid.Column="0"
                        Background="White"
                        CornerRadius="10"
                        Margin="0,-10,10,0"
                        Padding="0,20,0,20">
                    <TextBlock x:Name="DepName"
                               Text="Все сотрудники"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- Правая панель: три кнопки -->
                <Border Grid.Column="1"
                        Margin="0,-10,0,0"
                        Background="White"
                        CornerRadius="10"
                        Padding="10">
                    <StackPanel Spacing="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button Classes="data" Grid.Column="0" Content="{Binding SaveBtn}" Background="Black" Click="NewEmployee" Margin="5" FontSize="33" />
                            <Button Classes="data" Grid.Column="1" Content="Изменить" Background="Black" Click="EditEmployee" Margin="5" FontSize="33" />

                        </Grid>
                        <Button Classes="data" Content="Удалить сотрудника" Background="Black" Command="{Binding DeleteEmployeeCommand}" Margin="5" FontSize="35"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Место под DataGrid (нижняя часть) -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10"
                    Margin="0,10,0,0"
                    Padding="10">

                <DataGrid   IsReadOnly="True"
                            AutoGenerateColumns="True"
                            CanUserReorderColumns="True"
                            CanUserResizeColumns="True"
                            CanUserSortColumns="False"
                            GridLinesVisibility="All"
                            BorderThickness="4" BorderBrush="Black"
                            CornerRadius="4"
                            ItemsSource="{Binding Employees}"
                            SelectedItem="{Binding SelectedEmployee}">
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>